{
  "name": "secret-shop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "dev": "npx ts-node server.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "preview": "cross-env NODE_ENV=production node server",
    "start": "vite",
    "test:cypress-open": "cypress open --e2e --browser chrome",
    "test:cypress-run": "cypress run --e2e",
    "test:cypress": "start-server-and-test dev http-get://localhost:3000 test:cypress-open",
    "coverage:cypress": "npx nyc report && npx nyc report --reporter=text-summary"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.3",
    "@types/compression": "^1.7.2",
    "@types/react-redux": "^7.1.25",
    "axios": "^1.3.4",
    "body-scroll-lock": "^4.0.0-beta.0",
    "express": "^4.18.2",
    "isomorphic-fetch": "^3.0.0",
    "nodemon": "^2.0.22",
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.8",
    "react-redux": "^8.0.5",
    "react-router": "^6.8.2",
    "react-router-dom": "^6.9.0",
    "redux": "^4.2.1",
    "sass": "^1.59.2",
    "serialize-javascript": "^6.0.1",
    "sirv": "^2.0.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.4",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/body-scroll-lock": "^3.1.0",
    "@types/express": "^4.17.17",
    "@types/isomorphic-fetch": "0.0.36",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/serialize-javascript": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.3",
    "cypress": "^12.10.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.1.2",
    "msw": "^1.2.1",
    "prettier": "^2.8.4",
    "start-server-and-test": "^2.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vite-plugin-istanbul": "^4.0.1",
    "vitest": "^0.29.3"
  },
  "nyc": {
    "exclude": [
      "src/helper/testWithStore.tsx",
      "src/entry-server.tsx",
      "src/main.tsx"
    ]
  }
